<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!-- 使用style方式定义activity切换动画 -->
    <!--<style name="activityAnim">-->
    <!--<item name="Android:activityOpenEnterAnimation">@anim/base_s</item>-->
    <!--<item name="Android:activityOpenExitAnimation">@anim/slide_in_top</item>-->
    <!--</style>-->

    <!--activityOpenEnterAnimation // 用于设置打开新的Activity并进入新的Activity展示的动画-->
    <!--activityOpenExitAnimation  // 用于设置打开新的Activity并销毁之前的Activity展示的动画-->
    <!--activityCloseEnterAnimation  // 用于设置关闭当前Activity进入上一个Activity展示的动画-->
    <!--activityCloseExitAnimation  // 用于设置关闭当前Activity时展示的动画-->


    <!-- base_  加载框-->
    <style name="LoadingDialogLight" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 屏幕背景不变暗 -->
        <item name="colorAccent">@color/color_app</item>
    </style>


    <!-- activity MainActivity xml -->
    <style name="MainBottomStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@drawable/main_selector_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dimens_12_font</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-6dp</item>
        <item name="android:paddingTop">@dimen/view_distance_8</item>
    </style>

    <!-- fragment  mine xml-->
    <style name="MineUserItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/view_distance_10</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/view_distance_20</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">@dimen/view_distance_20</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/dimens_12_font</item>
    </style>

    <style name="MineUserInfoStyle">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/dimens_12_font</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- fragment download -->
    <style name="CustomDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->
    </style>
    <!-- activity SetActivity xml-->
    <style name="SetActivityBT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawableRight">@mipmap/set_bottom_btn_right_arrow</item>
    </style>

    <!-- 城市列表弹窗 -->
    <style name="SpinnerItemStyle">
        <item name="android:background">@drawable/light_entry_bg</item>
        <item name="android:textColor">@color/color_blank</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

</resources>
