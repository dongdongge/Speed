<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/select_path_adapter_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/select_path_adapter_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_path_adapter_image"
        android:layout_toRightOf="@+id/select_path_adapter_image"
        android:text="52job"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimens_14_font" />

    <TextView
        android:id="@+id/select_path_adapter_child_file_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_path_adapter_image"
        android:layout_toRightOf="@+id/select_path_adapter_image"
        android:text="3é¡¹"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/dimens_12_font" />

    <TextView
        android:id="@+id/select_path_adapter_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/select_path_adapter_child_file_number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/select_path_adapter_child_file_number"
        android:text="|"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/dimens_12_font" />

    <TextView
        android:id="@+id/select_path_adapter_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/select_path_adapter_l"
        android:layout_toRightOf="@+id/select_path_adapter_l"
        android:text="2018/8/13 10:35"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/dimens_12_font" />

    <ImageView
        android:id="@+id/select_path_adapter_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/set_bottom_btn_right_arrow" />
</RelativeLayout>
